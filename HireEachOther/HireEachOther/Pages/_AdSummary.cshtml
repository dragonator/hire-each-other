@using HireEachOther.Models
@model Ad

<div class="grid-item col-md-6 mb-4">
  <div class="card">
    <div class="card-header">
      @Model.Title
    </div>
    <div class="card-body">
      <p>@Model.Description</p>
    </div>
    <div class="card-body">
      <span class="card-text">$ @Model.Payment / @Model.Duration</span>
      <a asp-page="UserProfile" asp-route-userId="@Model.UserId" class="btn btn-primary btn-sm">Author</a>
      <a asp-page="AdProfile" asp-route-adId="@Model.Id" class="btn btn-primary btn-sm">Details</a>
    </div>
  </div>
</div>
